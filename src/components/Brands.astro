---
import { Image } from 'astro:assets'; // or '@astrojs/image/components' if you're using that

const brands = [
  {
    name: 'ADO',
    logo: 'https://crearmedia.com/wp-content/uploads/2025/05/ADO.svg',
  },
  {
    name: 'Nestlé',
    logo: 'https://crearmedia.com//wp-content/uploads/2025/05/logo-nestle-crear-media.svg',
    invertInLight: true,    // will invert in light mode, stay normal in dark
  },
  {
    name: 'BI',
    logo: 'https://crearmedia.com/wp-content/uploads/2025/04/logo-BI-crear-media.svg',
    
  },
  {
    name: 'GEP',
    logo: 'https://crearmedia.com/wp-content/uploads/2025/05/geep.svg',
  },
  {
    name: 'DollarCity',
    logo: 'https://crearmedia.com/wp-content/uploads/2025/05/logo-dollarcity-alidado-crear-media.svg',
  },
  {
    name: 'Sony',
    logo: 'https://crearmedia.com//wp-content/uploads/2025/05/logo-sony-crear-media.svg',
    invertInDark: true,   
  },
  {
    name: 'Cinepolis',
    logo: 'https://crearmedia.com/wp-content/uploads/2025/05/logo-cinepolis-crear-media.svg',
  },
  {
    name: 'Liverpool',
    logo: 'https://crearmedia.com/wp-content/uploads/2025/05/logo-liverpool-crear-media.svg',
  },
];
---

<section
  aria-labelledby="brands-title"
  class="py-5 px-6 md:px-12 bg-white dark:bg-gray-900 transition-colors duration-300"
>
  <div class="container mx-auto text-center">
    <h2 id="brands-title" class="sr-only">Empresas que confían en CrearMedia</h2>

    <ul
      role="list"
      class="mt-8 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-8 gap-6 items-center"
    >
      {brands.map((brand) => {
        // build filter classes
        let filterClasses = 'filter';
        if (brand.invertInDark) {
          filterClasses += ' dark:invert';
        }
        if (brand.invertInLight) {
          // invert in light, reset in dark
          filterClasses += ' invert dark:invert-0';
        }

        return (
          <li class="group relative flex items-center justify-center p-4 bg-gray-200/50 dark:bg-gray-800/30 backdrop-blur-lg rounded-xl overflow-hidden transition-transform duration-300 hover:scale-105">
            <figure class="relative z-10 w-full h-12">
              <Image
                src={brand.logo}
                alt={brand.name}
                width={160}
                height={48}
                class={`w-full h-full object-contain transition-opacity duration-300 group-hover:opacity-80 ${filterClasses}`}
                loading="lazy"
              />
            </figure>
            {/* animated glow */}
            <div
              class="absolute inset-0 bg-gradient-to-tr from-cm-500 via-teal-500 to-cm-400 opacity-0 blur-2xl transition-opacity duration-500 group-hover:opacity-50 rounded-xl"
              aria-hidden="true"
            />
          </li>
        );
      })}
    </ul>
  </div>
</section>

<!-- Optional: JSON-LD listing your clients for SEO -->
<script type="application/ld+json">
  {JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    name: "CrearMedia",
    url: "https://crearmedia.com",
    logo: brands.map((b) => `https://crearmedia.com${b.logo}`)
  })}
</script>
