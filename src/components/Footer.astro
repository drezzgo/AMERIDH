<footer class="bg-gray-900 text-white animate-fadeInUp">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-2 space-y-4">
        <a href="https://crearmedia.com"><h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cm-500 to-cm-100">{siteName}</h2></a>
        <p class="text-gray-400">{siteDescription}</p>
        <div class="flex space-x-4">
          {socialLinks.map(link => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors duration-300"
              aria-label={link.name}
              set:html={link.svg}
            />
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <nav aria-label="Quick links">
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(item => (
            <li>
              <a
                href={item.href}
                class="text-gray-400 hover:text-white transition-colors duration-300"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
        <address class="not-italic space-y-2 text-gray-400">
          {contactInfo.map(contact => (
            <div class="flex items-center">
              <span set:html={contact.svg} />
              <a
                href={contact.href}
                class="hover:text-white transition-colors duration-300"
              >
                {contact.label}
              </a>
            </div>
          ))}
        </address>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-gray-800 text-center">
      <p class="text-gray-400">
        © {currentYear} {siteName}. Todos los derechos reservados.
      </p>
    </div>
  </div>

