---
// src/components/Hero.astro
import { Image } from 'astro:assets';
const speakerImg =
  "https://crearmedia.com/wp-content/uploads/2025/06/landing-noche_Landing.png";
const speakerImg2 =
  "https://crearmedia.com/wp-content/uploads/2025/06/alejandro_foto.png";
---

<section
  class="relative w-full bg-white dark:bg-gray-900 overflow-hidden transition-colors duration-300"
>
  <!-- FONDO absolute: solo en lg+ ocupa el 5/8 de ancho y 100% altura -->
  <div class="hidden lg:block absolute inset-y-0 -right-30 w-5/8 h-full z-0 pointer-events-none"
    aria-hidden="true">
    <img
      src={speakerImg}
      width={1200}
      height={1200}
      alt=""
      class="object-cover object-right h-full w-full"
      loading="lazy"
    />
  </div>

  <!-- CONTENIDO: z-10 para estar siempre encima del fondo -->
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-8 items-center pt-16 lg:pt-24 pb-16">

        <!-- ====== IZQUIERDA ====== -->
        <div class="flex flex-col justify-center space-y-6">
          <!-- ====== FILA DE TAGS ====== -->
          <div class="flex flex-wrap gap-2 max-w-sm">
            <!-- Tarjeta 1: Evento online gratuito -->
            <span
              class="gap-1 bg-gray-100 dark:bg-gray-800 text-gray-800 inline-flex items-center dark:text-gray-200 text-xs font-medium px-3 py-1 rounded-lg"
            >
              <!-- Ícono de monitor o pantalla -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width=""
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-video"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M15 10l4.553 -2.276a1 1 0 0 1 1.447 .894v6.764a1 1 0 0 1 -1.447 .894l-4.553 -2.276v-4z"
                ></path><path
                  d="M3 6m0 2a2 2 0 0 1 2 -2h8a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-8a2 2 0 0 1 -2 -2z"
                ></path></svg
              >
              Experiencia exclusiva AMEDIRH 2025
            </span>

            <!-- Tarjeta 2: Hora -->
            <span
              class="inline-flex items-center gap-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-xs font-medium px-3 py-1 rounded-lg"
            >
              <!-- Bandera de México -->
              <img
                src="https://flagcdn.com/w20/mx.png"
                alt="Bandera de México"
                width="20"
                height="15"
                loading="lazy"
                decoding="async"
              />
              México
            </span>
            <span
              class="inline-flex items-center gap-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-xs font-medium px-3 py-1 rounded-lg"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-access-point"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M12 12l0 .01"></path><path
                  d="M14.828 9.172a4 4 0 0 1 0 5.656"></path><path
                  d="M17.657 6.343a8 8 0 0 1 0 11.314"></path><path
                  d="M9.168 14.828a4 4 0 0 1 0 -5.656"></path><path
                  d="M6.337 17.657a8 8 0 0 1 0 -11.314"></path></svg
              >
              CDMX | Expo Santa Fe
            </span>

            <!-- Tarjeta 4: Fecha -->
            <span
              class="inline-flex items-center gap-1 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-xs font-medium px-3 py-1 rounded-lg"
            >
              <!-- Ícono de calendario -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-calendar-week"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"
                ></path><path d="M16 3v4"></path><path d="M8 3v4"></path><path
                  d="M4 11h16"></path><path d="M7 14h.013"></path><path
                  d="M10.01 14h.005"></path><path d="M13.01 14h.005"></path><path
                  d="M16.015 14h.005"></path><path d="M13.015 17h.005"
                ></path><path d="M7.01 17h.005"></path><path d="M10.01 17h.005"
                ></path></svg
              >
              22 y 23 de Octubre
            </span>
          </div>

          <!-- ====== TÍTULO PRINCIPAL ====== -->
          <h2
            class="text-3xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100 leading-tight mr-12"
          >
            Atrévete a descubrir <span
              class="bg-clip-text text-transparent bg-gradient-to-r from-cm-500 to-teal-500"
              >la magIA del aprendizaje corporativo.</span> En CrearMedia fusionamos creatividad y tecnología para que tu empresa explore nuevas rutas de capacitación
          </h2>
          <div class="space-y-2">
            <!-- ====== SUBTÍTULO / DESCRIPCIÓN ====== -->
            <p class="text-lg sm:text-xl text-gray-700 dark:text-gray-300">
              Con magia, diseñamos experiencias de aprendizaje únicas, adaptadas a la cultura y desafíos de tu empresa.
            </p>
            <p
              class="bg-clip-text text-lg text-transparent bg-gradient-to-r from-teal-500 to-teal-200 sm:text-xl"
            >
              Personalizadas, Medibles,  Transformadoras.
            </p>
          </div>

          <!-- ====== BOTÓN CTA PRINCIPAL ====== -->
          
          <div>
            <a
              id="hero-button"
              href="#form-container"
              class="relative inline-flex items-center justify-center 
            bg-gradient-to-r from-cm-500 to-teal-500
            text-white font-semibold text-lg 
            py-3 px-8 rounded-lg 
            shadow-lg 
            overflow-hidden
            transition-transform duration-300 ease-in-out
            hover:scale-105 hover:shadow-2xl"
            >
              <span
                class="absolute inset-0 bg-gradient-to-r from-cm-200 to-teal-200 scale-0 group-hover:scale-100 transition-transform origin-center"
              ></span>
              <span class="relative z-10">Vive la magia de CrearMedia</span>
            </a>
          </div>
        </div>

        <!-- ====== DERECHA: speakerImg2 SOLO en móvil (lg:hidden) ====== -->
        <div class="relative w-full flex justify-center items-center lg:hidden">
          <img
            src={speakerImg2}
            alt="Alejandro, speaker del webinar"
            width={600}
            height={600}
            class="relative z-10 max-w-full h-auto rounded-xl"
            loading="lazy"
          />
          <div class="absolute inset-0 z-0 bg-gradient-to-br from-cm-600 via-teal-500 to-green-400 opacity-50 blur-3xl rounded-full"></div>
        </div>

    </div>
  </div>
</section>
