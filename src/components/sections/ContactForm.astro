---
import Input from '../ui/Input.astro';
import Button from '../ui/Button.astro';
---

<section id="contact" class="py-12 md:py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-6 md:px-8 max-w-3xl">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Agenda una demo</h2>
    <p class="mt-2 text-gray-600 dark:text-gray-300">Completa el formulario y nos pondremos en contacto para agendar tu demo en Expo AMEDIRH.</p>

    <form id="contact-form" class="mt-6 grid grid-cols-1 gap-4" novalidate>
      <label for="name" class="sr-only">Nombre</label>
      <Input id="name" name="name" placeholder="Nombre completo" required />

      <label for="company" class="sr-only">Empresa</label>
      <Input id="company" name="company" placeholder="Empresa" />

      <label for="email" class="sr-only">Correo</label>
      <Input id="email" name="email" type="email" placeholder="correo@empresa.com" required />

      <label for="phone" class="sr-only">Teléfono</label>
      <Input id="phone" name="phone" type="tel" placeholder="+57 300 000 0000" />

      <label for="message" class="sr-only">Mensaje</label>
      <textarea id="message" name="message" rows="4" placeholder="¿Qué necesitas?" class="block w-full bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-md px-4 py-3 text-gray-900 dark:text-gray-100 placeholder-gray-400 focus:outline-none focus-visible:ring-4 focus-visible:ring-cm-500 transition-colors duration-150"></textarea>

      <div class="flex items-center gap-3">
        <Button type="submit" variant="primary">Enviar</Button>
        <p id="form-status" class="text-sm text-gray-600 dark:text-gray-300 sr-only" aria-live="polite"></p>
      </div>
    </form>

    <script type="module">
      const form = document.getElementById('contact-form');
      const status = document.getElementById('form-status');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        status.classList.remove('sr-only');
        status.textContent = 'Enviando...';

        const data = new FormData(form);
        const payload = Object.fromEntries(data.entries());

        // Basic client-side validation
        if (!payload.name || !payload.email) {
          status.textContent = 'Por favor completa los campos requeridos.';
          return;
        }

        try {
          const res = await fetch('/api/contact', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });
          const json = await res.json();
          if (res.ok) {
            status.textContent = 'Gracias — nos pondremos en contacto pronto.';
            form.reset();
          } else {
            status.textContent = json?.message || 'Hubo un error al enviar. Intenta más tarde.';
          }
        } catch (err) {
          status.textContent = 'Error de red. Verifica tu conexión.';
        }
      });
    </script>
  </div>
</section>
