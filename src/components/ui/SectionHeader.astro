---
export interface Props {
  eyebrow?: string
  title: string
  subtitle?: string
}

export let eyebrow: Props['eyebrow'] = '';
export let title: Props['title'] = '';
export let subtitle: Props['subtitle'] = '';
---

<header class="mb-6">
  {eyebrow ? <p class="text-sm uppercase font-medium text-cm-500 mb-2">{eyebrow}</p> : null}
  <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100">{title}</h2>
  {subtitle ? <p class="mt-2 text-gray-600 dark:text-gray-300">{subtitle}</p> : null}
</header>
