---
import Layout from '../layouts/Layout.astro';

// Imágenes de “tickets”
// Asegúrate de tener /public/images/ticket-left.png y ticket-right.png
const ticketLeft = 'https://crearmedia.com/wp-content/uploads/2025/06/Ticket_02.webp';
const ticketRight = 'https://crearmedia.com/wp-content/uploads/2025/06/Ticket_03.webp';
// Nueva imagen para el tercer ticket. Reemplaza la URL si es necesario.
const ticketExtra = 'https://crearmedia.com/wp-content/uploads/2025/06/Ticket_01.webp';

// URL de WhatsApp (Click to Chat)
const whatsappLink = 'https://wa.me/1234567890?text=¡Hola,%20quiero%20validar%20mis%20entradas!';

// URL del video de instrucciones
const embedUrl = 'https://www.youtube.com/embed/XWygZO66XKE?si=5-s6MZ2xJIbwl-Vw';

// JSON-LD para SEO: definimos que esta es una página de “gracias” tras el registro
const pageJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Gracias por registrarte - Webinar CrearMedia",
  "description": "¡Gracias por registrarte! Consulta el video con instrucciones y valida tu entrada en WhatsApp.",
  "url": "https://crearmedia.com/gracias",
  "inLanguage": "es",
  "publisher": {
    "@type": "Organization",
    "name": "CrearMedia",
    "url": "https://crearmedia.com"
  }
};
---

<Layout>
  <section id="thank-you" class="relative w-full min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300 overflow-hidden">

    {/* Ticket Izquierdo - Más grande y reposicionado */}
    <img
      src={ticketLeft}
      alt="Ticket decorativo girado hacia la izquierda"
      class="hidden md:block absolute top-16 -left-10 lg:top-20 lg:-left-16 w-64 lg:w-80 transform -rotate-12 drop-shadow-2xl"
      loading="lazy"
      aria-hidden="true"
    />
    {/* Ticket Derecho - Más grande y reposicionado */}
    <img
      src={ticketRight}
      alt="Ticket decorativo girado hacia la derecha"
      class="hidden md:block absolute bottom-16 -right-10 lg:bottom-20 lg:-right-16 w-64 lg:w-80 transform rotate-12 drop-shadow-2xl"
      loading="lazy"
      aria-hidden="true"
    />
    {/* Nuevo Ticket Flotante Adicional */}
    <img
      src={ticketExtra}
      alt="Ticket decorativo adicional flotante"
      class="hidden md:block absolute top-1/4 -right-8 lg:top-1/3 lg:-right-12 w-56 lg:w-72 transform rotate-[8deg] drop-shadow-2xl"
      loading="lazy"
      aria-hidden="true"
    />

    <!-- Contenedor principal centrado -->
    <div class="relative z-10 container mx-auto px-6 md:px-12 lg:px-24 py-24 flex flex-col items-center space-y-8">
      <!-- TÍTULO PRINCIPAL -->
      <h1 class="text-4xl md:text-5xl font-extrabold text-center bg-gradient-to-r from-cm-500 to-teal-500 bg-clip-text text-transparent leading-tight">
        ¡Gracias por Registrarte!
      </h1>

      <!-- SUBTÍTULO / MENSAJE -->
      <p class="text-lg md:text-xl text-center max-w-3xl text-gray-700 dark:text-gray-300">
        Ya casi estás dentro del espacio donde vamos a compartir una estrategia que está cambiando cómo las empresas lideran la formación, solo queda un paso:<br/>
        <span class="font-semibold text-gray-900 dark:text-white">
          Revisa tu correo (incluyendo promociones o spam) y asegura tu acceso al evento.
        </span>
      </p>

      <!-- INDICADOR “Mira el video” -->
      <div
        class="
          flex items-center space-x-2
          bg-white/10 dark:bg-gray-800/30
          backdrop-blur-md
          px-4 py-2
          rounded-full
        "
        aria-label="Instrucciones en video"
      >
        <svg  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20"  viewBox="0 0 20 20"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-corner-left-down text-cm-500"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 6h-6a3 3 0 0 0 -3 3v10l-4 -4m8 0l-4 4" /></svg>
        <span class="text-gray-900 dark:text-white">Tómate un momento para alinear ideas, expectativas y próximos pasos antes de la sesión.</span>
      </div>

      <!-- VIDEO EMBED CON MARCO GLASSMÓRFICO -->
      <div
        class="
          w-full max-w-4xl
          aspect-video
          overflow-hidden
          rounded-2xl
          ring-1 ring-white/20
          bg-white/10 dark:bg-gray-800/30
          backdrop-blur-lg
          drop-shadow-2xl
        "
      >
        <script src="https://fast.wistia.com/player.js" async></script><script src="https://fast.wistia.com/embed/zh1kt5hq4r.js" async type="module"></script><style>wistia-player[media-id='zh1kt5hq4r']:not(:defined) { background: center / contain no-repeat url('https://fast.wistia.com/embed/medias/zh1kt5hq4r/swatch'); display: block; filter: blur(5px); padding-top:56.25%; }</style> <wistia-player media-id="zh1kt5hq4r" aspect="1.7777777777777777"></wistia-player>
      </div>

      <!-- CTA DE WHATSAPP -->
<!-- Reemplaza el bloque del botón actual -->
    <div class="pt-4">
    <a
        title="Add to Calendar" data-id="Ep25910267"
        href="https://www.addevent.com/event/Ep25910267"
        class="
        relative inline-flex items-center justify-center
        bg-gradient-to-r from-cm-500 via-teal-500 to-cm-400
        text-white font-semibold text-lg
        py-3 px-8 rounded-lg
        shadow-lg
        overflow-hidden
        transition-transform duration-300 ease-in-out
        hover:scale-105 hover:shadow-2xl
        "
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Agregar evento al calendario de Google"
    >
        <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 text-white mr-2"
        fill="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
        >
        <!-- ícono de calendario, por ejemplo -->
        <path d="M19 4h-1V2h-2v2H8V2H6v2H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zM5 20V9h14l.002 11H5zM7 11h5v5H7v-5z" />
        </svg>
        Agregar a Google Calendar
    </a>
    </div>

      <!-- TEXTO COMPLEMENTARIO -->
      <p class="mt-4 text-center text-gray-500 dark:text-gray-400 max-w-2xl">
        ¿Tienes dudas o quieres hablar con nosotros antes del evento?<br /><a href="https://crearmedia.com/formulario/"><span class="text-cm-500 font-semibold">Contáctanos aquí</span></a> y uno de nuestros expertos te responderá lo antes posible.
      </p>

      <!-- RECOMENDACIONES ADICIONALES -->
      <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 gap-6 pt-12">
        <!-- CARD 1 -->
        <div
          class="
            relative flex flex-col h-full justify-start
            bg-white/30 dark:bg-gray-800/30
            backdrop-blur-lg
            border border-gray-200 dark:border-gray-700
            rounded-2xl p-6
            transition-transform duration-300 ease-in-out
            hover:scale-102 hover:shadow-2xl
          "
        >
          <!-- Borde degradado superior -->
          <div
            class="
              absolute top-0 left-6
              w-1/3 h-1
              bg-gradient-to-r from-cm-500 to-teal-500
              rounded-br-full
            "
          ></div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
            Reserva la fecha en tu calendario
          </h4>
          <p class="text-gray-700 dark:text-gray-300 flex-1">
            Asegúrate de apartar el <strong>11 de Julio a las 11:00 AM</strong> para no perderte esta valiosa oportunidad de crecimiento personal y profesional.
          </p>
        </div>

        <!-- CARD 2 -->
        <div
          class="
            relative flex flex-col h-full justify-start
            bg-white/30 dark:bg-gray-800/30
            backdrop-blur-lg
            border border-gray-200 dark:border-gray-700
            rounded-2xl p-6
            transition-transform duration-300 ease-in-out
            hover:scale-102 hover:shadow-2xl
          "
        >
          <!-- Borde degradado superior -->
          <div
            class="
              absolute top-0 left-6
              w-1/3 h-1
              bg-gradient-to-r from-cm-500 to-teal-500
              rounded-br-full
            "
          ></div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
            Extiende esta oportunidad
          </h4>
          <p class="text-gray-700 dark:text-gray-300 flex-1">
            Comparte este evento con líderes o profesionales que podrían beneficiarse de una estrategia real, práctica y medible.
          </p>
        </div>
      </div>

      <!-- FIRMA / DESPEDIDA -->
      <p class="mt-12 text-center text-gray-500 italic">
        Nos vemos dentro, <br />
        <span class="font-script text-5xl bg-clip-text font-semibold text-transparent bg-gradient-to-r from-cm-500 to-teal-500">Alejandro Perez</span>
      </p>
    </div>
  </section>

  <!-- JSON-LD para SEO: descripción de la página -->
  <script type="application/ld+json">
    {JSON.stringify(pageJsonLd)}
  </script>
  <script type="text/javascript" src="https://cdn.addevent.com/libs/atc/1.6.1/atc.min.js" async defer></script>
</Layout>
